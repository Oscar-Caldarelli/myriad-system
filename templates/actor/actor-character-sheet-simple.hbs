<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">
  
  {{!-- Header --}}
  <header class="sheet-header">
    <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100"/>
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{actor.name}}" placeholder="{{localize 'Name'}}"/></h1>
    </div>
  </header>

  {{!-- Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="characteristics">{{localize "MYRIAD_SYSTEM.SheetLabels.Characteristics"}}</a>
    <a class="item" data-tab="features">{{localize "MYRIAD_SYSTEM.SheetLabels.Features"}}</a>
    <a class="item" data-tab="inventory">{{localize "MYRIAD_SYSTEM.SheetLabels.Inventory"}}</a>
    <a class="item" data-tab="biography">{{localize "Biography"}}</a>
  </nav>

  {{!-- Tab content --}}
  <section class="sheet-body">
    
    {{!-- Characteristics Tab --}}
    <div class="tab characteristics" data-group="primary" data-tab="characteristics">
      <div class="grid grid-2col">
        {{#each system.characteristics as |characteristic key|}}
        <div class="characteristic flex-group-center">
          {{#if (eq key "puissance")}}
          <label class="characteristic-label">{{localize "MYRIAD_SYSTEM.Characteristic.puissance"}}</label>
          {{else if (eq key "coordination")}}
          <label class="characteristic-label">{{localize "MYRIAD_SYSTEM.Characteristic.coordination"}}</label>
          {{else if (eq key "ingeniosite")}}
          <label class="characteristic-label">{{localize "MYRIAD_SYSTEM.Characteristic.ingeniosite"}}</label>
          {{else if (eq key "perspicacite")}}
          <label class="characteristic-label">{{localize "MYRIAD_SYSTEM.Characteristic.perspicacite"}}</label>
          {{else}}
          <label class="characteristic-label">{{key}}</label>
          {{/if}}
          <div class="characteristic-content">
            <input type="text" name="system.characteristics.{{key}}.value" value="{{characteristic.value}}" data-dtype="Number"/>
          </div>
        </div>
        {{/each}}
      </div>
    </div>

    {{!-- Features Tab --}}
    <div class="tab features" data-group="primary" data-tab="features">
      
      {{!-- Skills --}}
      <div class="skills">
        <header class="items-header flexrow">
          <h3 class="item-name">Skills</h3>
          <div class="item-controls">
            <a class="item-control item-create" title="Create Skill" data-type="competence"><i class="fas fa-plus"></i></a>
          </div>
        </header>
        <ol class="items-list">
          {{#each skills as |item id|}}
          <li class="item flexrow" data-item-id="{{item._id}}">
            <div class="item-name">
              <div class="item-image">
                <img src="{{item.img}}" title="{{item.name}}" width="24" height="24" />
              </div>
              <h4>{{item.name}}</h4>
            </div>
            <div class="item-controls">
              <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
              <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
            </div>
          </li>
          {{/each}}
        </ol>
      </div>

      {{!-- Features --}}
      <div class="features">
        <header class="items-header flexrow">
          <h3 class="item-name">Features</h3>
          <div class="item-controls">
            <a class="item-control item-create" title="Create Feature" data-type="feature"><i class="fas fa-plus"></i></a>
          </div>
        </header>
        <ol class="items-list">
          {{#each features as |item id|}}
          <li class="item flexrow" data-item-id="{{item._id}}">
            <div class="item-name">
              <div class="item-image">
                <img src="{{item.img}}" title="{{item.name}}" width="24" height="24" />
              </div>
              <h4>{{item.name}}</h4>
            </div>
            <div class="item-controls">
              <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
              <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
            </div>
          </li>
          {{/each}}
        </ol>
      </div>
      
    </div>

    {{!-- Inventory Tab --}}
    <div class="tab inventory" data-group="primary" data-tab="inventory">
      <div class="items">
        <header class="items-header flexrow">
          <h3 class="item-name">Items</h3>
          <div class="item-controls">
            <a class="item-control item-create" title="Create Item" data-type="item"><i class="fas fa-plus"></i></a>
          </div>
        </header>
        <ol class="items-list">
          {{#each gear as |item id|}}
          <li class="item flexrow" data-item-id="{{item._id}}">
            <div class="item-name">
              <div class="item-image">
                <img src="{{item.img}}" title="{{item.name}}" width="24" height="24" />
              </div>
              <h4>{{item.name}}</h4>
            </div>
            <div class="item-controls">
              <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
              <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
            </div>
          </li>
          {{/each}}
        </ol>
      </div>
    </div>

    {{!-- Biography Tab --}}
    <div class="tab biography" data-group="primary" data-tab="biography">
      {{editor enrichedBiography target="system.biography" button=true owner=owner editable=editable}}
    </div>

  </section>
</form>
