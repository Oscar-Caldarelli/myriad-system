{
  "name": "myriad-system",
  "version": "2.0.0",
  "description": "CSS compiler for the MyriadSystem system",
  "scripts": {
    "build": "sass src/scss/myriad-system.scss css/myriad-system.css --style=expanded --no-source-map",
    "watch": "sass src/scss/myriad-system.scss css/myriad-system.css --style=expanded --source-map --watch",
    "validate": "node validate-templates.js"
  },
  "browserslist": [
    "last 3 versions"
  ],
  "author": "Asacolips",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "handlebars": "^4.7.8",
    "sass": "^1.89.2"
  }
}
